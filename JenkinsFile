pipeline {
    agent any
    stages {
        stage("Checkout Code") {
            steps {
                checkout([
                        $class           : 'GitSCM',
                        branches         : [[name: '*/main']],
                        userRemoteConfigs: [[
                                                    url          : "https://github.com/zeeshanmys98/sample-webapp.git",
                                                    credentialsId: "github_token"
                                            ]]
                ])
            }
        }
        stage("Build") {
            steps {
                sh '''
                mvn clean install
                '''
            }
        }
        stage("Test") {
            steps {
                sh '''
                mvn test
                '''
            }
        }
        stage("Deploy To Artifactory") {
            steps {
                configFileProvider([configFile(fileId: '82f80c51-a4d1-4343-9df3-14fff9de520f', variable: 'MAVEN_SETTINGS')]) {
                    sh '''
                    mvn deploy -s $MAVEN_SETTINGS
                    '''
                }
            }
        }
        stage("Docker Build") {
            steps {
                sh 'docker build -t sample-webapp .'
            }
        }
        stage("Docker Image Push") {
            steps {
                withCredentials([[
                                         $class       : 'AmazonWebServicesCredentialsBinding',
                                         credentialsId: 'aws-ecr-creds'
                                 ]]) {
                    sh '''
                        aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 612031147002.dkr.ecr.us-east-1.amazonaws.com
                        docker tag sample-webapp:latest 612031147002.dkr.ecr.us-east-1.amazonaws.com/sample-webapp:latest
                        docker push 612031147002.dkr.ecr.us-east-1.amazonaws.com/sample-webapp:latest
                       '''

                }
            }
        }
    }
}
