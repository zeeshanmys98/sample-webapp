pipeline {
    agent { label 'worker-node' }
    stages {
        stage("Checkout Code") {
            steps {
                checkout([
                        $class           : 'GitSCM',
                        branches         : [[name: '*/main']],
                        userRemoteConfigs: [[
                                                    url          : "https://github.com/zeeshanmys98/sample-webapp.git",
                                                    credentialsId: "github_token"
                                            ]]
                ])
            }
        }
        stage("Build") {
            steps {
                sh '''
                mvn clean install
                '''
            }
        }
        stage("Test") {
            steps {
                sh '''
                mvn test
                '''
            }
        }
        stage("Deploy To Artifactory") {
            steps {
                configFileProvider([configFile(fileId: '82f80c51-a4d1-4343-9df3-14fff9de520f', variable: 'MAVEN_SETTINGS')]) {
                    sh '''
                    mvn deploy -s $MAVEN_SETTINGS
                    '''
                }
            }
        }
        stage("Docker Build") {
            steps {
                sh 'docker build -t sample-webapp .'
            }
        }
        stage("Docker Image Push") {
            steps {
                withCredentials([[
                                         $class       : 'AmazonWebServicesCredentialsBinding',
                                         credentialsId: 'aws-ecr-creds'
                                 ]]) {
                    sh '''
                        aws ecr get-login-password --region eu-north-1 | docker login --username AWS --password-stdin 119330871027.dkr.ecr.eu-north-1.amazonaws.com
                        docker build -t mominecr .
                        docker tag mominecr:latest 119330871027.dkr.ecr.eu-north-1.amazonaws.com/mominecr:latest
                        docker push 119330871027.dkr.ecr.eu-north-1.amazonaws.com/mominecr:latest
                       '''

                }
            }
        }
     stage("Run Docker Container") {
            steps {
                sh '''
                    docker stop sample-webapp || true
                    docker rm sample-webapp || true
                    docker run -it -d -p 9090:8090 119330871027.dkr.ecr.eu-north-1.amazonaws.com/mominecr:latest
                '''
            }
        }
    }
}
